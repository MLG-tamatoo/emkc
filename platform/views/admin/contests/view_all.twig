{% extends 'master.twig'%}
{% block content %}
    <div class="em_wide_content">
        <div class="row">
            <div class="col-12">
                <h4 class="f300">Contests</h4>

                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th style="width: 90px;"></th>
                            <th style="width: 60px;">ID</th>
                            <th>Name</th>
                            <th style="width: 140px;">Start</th>
                            <th style="width: 140px;">End</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contest in contests %}
                            <tr>
                                <td class="actions center">
                                    <a href="/admin/contests/update/{{ contest.contest_id }}">
                                        <i class="fa fa-pencil-alt"></i>
                                    </a>
                                    <a href="{{ contest.url }}">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </td>
                                <td>{{ contest.contest_id }}</td>
                                <td>{{ contest.name }}</td>
                                <td>{{ contest.start_date|date('m/d/Y') }}</td>
                                <td>{{ contest.end_date|date('m/d/Y') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
